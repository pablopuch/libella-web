---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SubHeader from "../components/sub-header.astro";
import { useTranslations, type UiType } from "../i18n/utils";

// Definimos el tipo de las propiedades que esperaremos
type Props = {
  title: string;
  description: string;
  lang: UiType; // Ajustamos el tipo de lang
};

// Extraemos las propiedades de Astro.props, asegurándonos de que no sean undefined
const { title, description, lang } = Astro.props as Props;

// Utilizamos las traducciones con el idioma proporcionado
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
  <head>
    <!-- Utilizamos el componente BaseHead para incluir las etiquetas meta -->
    <BaseHead lang={lang} title={title} description={description} />
  </head>

  <body>
    <!-- Header con título y idioma -->
    <Header title={t("site.title")} lang={lang} />
    <SubHeader />

    <!-- Contenido principal -->
    <main class="max-w-screen-xl flex-wrap items-center justify-between mx-auto p-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
